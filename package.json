{
	"name": "whiteboard",
	"version": "1.0.0",
	"description": "A simple whiteboard to draw on.",
	"author": "Shrikant Sharat Kandula",
	"license": "Apache-2.0",
	"private": true,
	"browserslist": ">1%",
	"jest": {
		"preset": "ts-jest"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"es6": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"overrides": [
			{
				"files": [
					"src/scripts/*.ts",
					"src/tests/*.ts"
				],
				"excludedFiles": [
					"node_modules",
					"dist",
					"coverage"
				]
			}
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 11,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"indent": [
				"error",
				"tab"
			],
			"no-tabs": [
				"error",
				{
					"allowIndentationTabs": true
				}
			],
			"max-len": [
				"error",
				{
					"code": 120,
					"tabWidth": 4,
					"ignoreComments": false,
					"ignoreTrailingComments": false,
					"ignoreStrings": false,
					"ignoreTemplateLiterals": false
				}
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"no-unused-vars": "off",
			"@typescript-eslint/no-unused-vars": "error",
			"no-unused-expressions": "off",
			"@typescript-eslint/no-unused-expressions": "error",
			"quotes": "off",
			"@typescript-eslint/quotes": [
				"error",
				"double"
			],
			"semi": "off",
			"@typescript-eslint/semi": [
				"error",
				"never"
			],
			"comma-dangle": "off",
			"@typescript-eslint/comma-dangle": [
				"error",
				"always-multiline"
			],
			"capitalized-comments": "error",
			"eol-last": "error",
			"no-trailing-spaces": "error",
			"camelcase": "error",
			"brace-style": "off",
			"@typescript-eslint/brace-style": [
				"error",
				"1tbs"
			],
			"object-curly-spacing": [
				"error",
				"always"
			],
			"curly": [
				"error",
				"all"
			],
			"eqeqeq": [
				"error",
				"always",
				{
					"null": "ignore"
				}
			],
			"no-shadow": "off",
			"@typescript-eslint/no-shadow": "error",
			"no-var": "error",
			"prefer-const": "error",
			"no-lonely-if": "error",
			"no-multiple-empty-lines": "error",
			"@typescript-eslint/no-for-in-array": "error"
		}
	},
	"devDependencies": {
		"@types/fabric": "^4.2.2",
		"@types/mithril": "^2.0.6",
		"@typescript-eslint/eslint-plugin": "^4.15.1",
		"@typescript-eslint/parser": "^4.15.1",
		"eslint": "^7.20.0",
		"fabric": "^4.3.1",
		"gh-pages": "^3.1.0",
		"jest": "^26.6.3",
		"mithril": "^2.0.4",
		"parcel": "^2.0.0-beta.1",
		"sass": "^1.32.8",
		"ts-jest": "^26.5.3",
		"typescript": "^4.2.3"
	}
}
